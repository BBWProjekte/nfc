<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nfcButtonOn"
        android:id="@+id/nfcOnButton"
        android:onClick="nfcOnPressed"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nfcButtonOff"
        android:id="@+id/nfcOffButton"
        android:onClick="nfcOffPressed"
        android:layout_below="@+id/nfcOnButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toReader"
        android:id="@+id/toReaderButton"
        android:onClick="toReaderPressed"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toReaderDescription"
        android:layout_above="@+id/toReaderButton"
        android:layout_alignParentStart="true" />

</RelativeLayout>
